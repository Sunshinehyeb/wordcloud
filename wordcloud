#csv 파일 저장
import csv
with open("C:/Users/real05/Desktop/ad-hoc/21.12.06 egis/noun_list_gtb_70.csv",'w', newline='',encoding='euc-kr') as f:
    csvw=csv.writer(f)
    for v in noun_list:
        csvw.writerow(v)

	
#text 파일 저장
with open("C:/Users/real05/Desktop/ad-hoc/21.12.06 egis/noun_list_gtb_70.txt",'w',encoding='utf-8') as f:
    for v in noun_list:
        f.write(" ".join(map(str,v)))
        f.write("\n")
