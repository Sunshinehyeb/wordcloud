#원하는 색상으로 지정
def color_func(word, font_size, position,orientation,random_state=None, **kwargs):
    return("hsl({:d},{:d}%, {:d}%)".format(np.random.randint(130,216),np.random.randint(78,100),np.random.randint(40,60)))

