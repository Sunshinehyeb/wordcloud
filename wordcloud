#패키지 설치_실행마다 C++ 설치
from konlpy.tag import Okt
from collections import Counter


#원본 파일 열기
f=open("C:/Users/real05/Desktop/ad-hoc/21.12.06 egis/word_chunk.txt",'r',encoding='utf-8')
text=f.read()

#2글자 아래로 삭제
okt=Okt()
noun=okt.nouns(text)
for i,v in enumerate(noun):
    if len(v)<2:
        noun.pop(i)

#리스트 내 단어 정제
noun2=[]
for item in noun:
    item_mod=item.replace("정책","")
    item_mod=item_mod.replace("추진","")
    item_mod=item_mod.replace("필요","")
    item_mod=item_mod.replace("생각","")
    item_mod=item_mod.replace("위해","")
    item_mod=item_mod.replace("통해","")
    item_mod=item_mod.replace("더","")
    item_mod=item_mod.replace("것","")
    item_mod=item_mod.replace("좀","")
    item_mod=item_mod.replace("대한","")
    item_mod=item_mod.replace(" ","")
    item_mod=item_mod.replace(".","")
    noun2.append(item_mod)


#명사 카운트
for i,v in enumerate(noun2):
    if len(v)<2:
        noun2.pop(i)
    
count=Counter(noun2)
f.close()

noun_list=count.most_common(71)

